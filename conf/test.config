/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Nextflow config file for running minimal tests
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Defines input files and everything required to run a fast and simple pipeline test.

    Use as follows:
        nextflow run nf-core/practicetwo -profile test,<docker/singularity> --outdir <OUTDIR>

----------------------------------------------------------------------------------------
*/

params {
    config_profile_name        = 'Test profile'
    config_profile_description = 'Minimal test dataset to check pipeline function'

    // Limit resources so that this can run on GitHub Actions
    max_cpus   = 2
    max_memory = '6.GB'
    max_time   = '6.h'

    // Input data
    //input  = params.pipelines_testdata_base_path + 'viralrecon/samplesheet/samplesheet_test_illumina_amplicon.csv'
    //input  = params.pipelines_testdata_base_path + 'hlatyping/samplesheets/samplesheet_fastq.csv'
    //input = 'assets/samplesheet-hlatyping-gh-sra.csv'
    //input = 'https://cdn.jsdelivr.net/gh/kevinpryan/test-datasets/data/samplesheet-hlatyping-gh-sra-subset.csv'
    input = 'https://cdn.jsdelivr.net/gh/kevinpryan/test-datasets/data/samplesheet-hlatyping-gh-example.csv'
    // Genome references
    genome = 'R64-1-1'
    // got fasta from rna-seq test config.
    //fasta = 'https://raw.githubusercontent.com/nf-core/test-datasets/7f1614baeb0ddf66e60be78c3d9fa55440465ac8/reference/genome.fasta'
    fasta = 'https://cdn.jsdelivr.net/gh/kevinpryan/test-datasets/data/chr6-subset.fa'
    adapter_fasta = ''
}
